{% extends 'login/base.html.twig' %}

{% block title %}Page de Connexion{% endblock %}

{% block head %}
    {{ parent() }}
    <style type="text/css">
        html {
            
            height: 100%;
            
        }
        
        body {
            
            background-color: #222222 !important;
            height: 100%;
            
        }
        .error { color: #d14d14; 
                 padding-top: 10px;}
        
        #footer > div {
            color:#cccccc;
            padding-left: 61px;
            top: 100px;
            position: relative;
        }
        
        #content {
            
            margin-top: -90px;
            top: 100px;
            position: relative;
        }
        
    </style>
{% endblock %}

{% block content %}
    
         <div class="form-box" id="login-box">
            <div class="header">Connexion</div>
            <form action="{{ path('connexion') }}" method="post">
                <div class="body bg-gray">
                    <div class="form-group">
                        <input class="form-control" id="username" type="text" name="_username" value="{{ last_username }}" placeholder="Votre login">
                    </div>
                    <div class="form-group" style="margin-bottom:0px !important;">
                        <input id="password" type="password" name="_password" class="form-control" placeholder="Votre mot de passe">
                    </div>          
                    {% if error %}
                      <div class="error"> <i class="fa fa-exclamation-triangle"></i> Le login ou le mot de passe est incorrect </div>
                    {% endif %}
                </div>
                <div class="footer">                                                               
                    <button id="button" type="submit" value="Connexion" class="btn bg-olive btn-block">Connexion</button>
                    
                    <p><a href="mailto:agence@aressy.com">J'ai oubli√© mon mot de passe</a></p>
                    
                </div>
            </form>

        </div>
    {% endblock %}